<div class="container">
  <div id="products" class="row list-group">
    <% category.each do | product |%>
      <div class="item  col-xs-4 col-lg-4">
        <div class="thumbnail">
          <img class="group list-group-image" src="<%= product.image.url %>" alt="" />
          <div class="product-name"><%= product.name.truncate(20) %></div>
          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= render "products/product_row", product: product, order_item: @order_item %>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>

<style type="text/css">
  .row{
    margin-right: 10px
  }
</style>